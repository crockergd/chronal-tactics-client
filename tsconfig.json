{
    "compilerOptions": {
        "target": "es5",
        "lib": [
            "dom",
            "es2017",
            "scripthost"
        ],
        "sourceMap": true,
        "moduleResolution": "node",
        "isolatedModules": false,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "preserveConstEnums": true,
        "esModuleInterop": true,
        "outDir": "./www"
    },
    "include": [
        "src/**/*.ts",
        "typings/*.d.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}